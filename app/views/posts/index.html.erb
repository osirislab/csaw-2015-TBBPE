<ul>
  <% @posts.each do |post| %>
    <li class="post">
      <%= link_to post.name, post %> <%= link_to("(edit)", edit_post_path(post)) if admin? %>
    </li>
  <% end %>
</ul>

Sort by <%= link_to "creation date", root_path(order: "created_at", q: params[:q]) %> or <%= link_to "last modified", root_path(order: "updated_at", q: params[:q]) %>
